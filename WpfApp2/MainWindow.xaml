<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="屏幕信息显示" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="10">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10">
                <Label x:Name="screenSizeLabel" FontSize="14" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                <Label x:Name="fullScreenWindowInfoLabel" FontSize="14" HorizontalAlignment="Left" Margin="0,0,0,10"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
